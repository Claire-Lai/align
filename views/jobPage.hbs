        {{#if profile.[0].[0].vetted}}
        <i class="fas fa-check vetted"></i>
        {{/if}}
    </div>
    <div class="impactFinderInfoDiv" id="impactFinderInfo"></div>
        <button class="connectbutton" type="button" style="margin-left:10px">Connect</button>
    </div>
    
