{{>original}}
<div class="companyMain row">    
    <div class="col-lg-2 col-md-3 col-sm-2 impactFinderLogo">{{impactFinderLogo}}</div>
    <div class="col-lg-4 col-md-6 col-sm-8 impactFinderName">{{finder_name}}
        {{#if vetted}}
        <i class="fas fa-check vetted"></i>
        {{/if}}
        <i class="fas fa-pencil"></i>
    </div>
    <div class="col-lg-1 col-md-3 col-sm-2"></div>
    <div class="col-lg-4 col-md-3 col-sm-2" style="display:flex; justify-content:space-around">
        <a href="" style="text-align:right;font-size:30px"><p>To impact Finder's project board</p></a>
        <button style="font-size:30px">Connect</button>
    </div>
</div>
<div class="impactFinder">
    <div class="impactFinderInfo">
        <div class="impactFinderInfoLeft">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="float:right;margin-top:30px;">
            Edit
            </button>   
            {{!-- Edit Form --}}
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="staticBackdropLabel">Edit your profile</h5>
                         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                         <form action="FILLMEIN">
                            <label for="impactFinderInfo">Impact Finder information</label>
                            <br>
                            <textarea type="text" name="impactFinderInfo" required></textarea>
                            <br>
                            <label for="impactFinderPhone">Phone: </label>
                            <input type="text" name="impactFinderPhone" placeholder="phone" required style="margin-bottom:5px;padding:5px"></textarea>
                            <br>
                            <label for="impactFinderEmail">Email:</label>
                            <input type="text" name="impactFinderEmail" placeholder="email" required style="margin-bottom:5px;padding:5px"></textarea>
                            <br>
                            <label for="impactFinderAddress">Adress</label>
                            <input type="text" name="impactFinderAddress" placeholder="address" style="margin-bottom:5px;padding:5px"></textarea>
                            <br>
                            <label for="small">Impact Finder Size</label>
                            <br>
                            <input type="radio" name="impactFinderSize" id="small" value="Small">
                            <label for="small">Small</label>

                            <input type="radio" name="impactFinderSize" id="medium" value="Medium">
                            <label for="medium">Medium</label>
                            <input type="radio" name="impactFinderSize" id="large" value="Large">
                            <label for="large">Large</label>
                            <br>
                            <h3 style="display:inline-block">Custom Fill Area</h3>
                            <button class="btn btn-warning" type="submit">Add</button>
                            <br>
                            <label for="customeFill">
                                <input type="text id=customFillTitle" name="customFillTitle" placeholder="Custom Fill Title">
                            </label>
                            <br>
                            <textarea type="text" name="customFillText" placeholder="Custom Fill Area" required></textarea>
                            
                        </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary">Save </button>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- Edit Form --}}
            <i class="fas fa-pencil"></i>
            <form action="">
                <div class="profileElement">
                    <label for="impactFinderInfo">Impact Finder information</label>
                    <br>
                    <p>{{finder_description}}</p>
                    <p style="display:inline-block">Size:</p>
                    {{finder_size}}
                </div>
                <div class="profileElement">
                    <label for="impactFinderContact">Impact Finder Contact</label>
                    <br>
                    <p style="display:inline-block">Telephone:</p>
                    {{telephone_number}}
                    <br>
                     <p style="display:inline-block">Mobile:</p>
                    {{mobile_number}}
                    <br>
                     <p style="display:inline-block">Email:</p>
                    {{email}}
                    <br>
            
                </div>
                <div class="profileElement">
                    <label for="small">Impact Finder Size</label>
                    <br>
                    <input type="radio" name="impactFinderSize" id="small" value="Small">
                    <label for="small">Small</label>

                    <input type="radio" name="impactFinderSize" id="medium" value="Medium">
                    <label for="medium">Medium</label>
                
                    <input type="radio" name="impactFinderSize" id="large" value="Large">
                    <label for="large">Large</label>
                    <br>
                    <button class="btn btn-warning submitButton" style="margin-top:10px;">Submit Changes</button>
                </div>
            </form>
        </div>
        <div class="impactFinderInfo impactFinderInfoLeft">
            <div class="profileElement">
                <input type="text" placeholder="Custom Fill Title" style="margin-bottom:5px;padding:5px"></input>
                <textarea placeholder="Custom Fill Me In" style="margin-bottom:5px;padding:5px"></textarea>
            </div>
            <div class="profileElement">
                <input type="text" placeholder="Custom Fill Title" style="margin-bottom:5px;padding:5px"></input>
                <textarea placeholder="Custom Fill Me In" style="margin-bottom:5px;padding:5px"></textarea>
            </div>
            <br>
            <button class="btn btn-warning submitButton" style="margin-top:10px">Submit Changes</button>
        </div>
    </div>
    <div class="impactFinderInfo impactFinderInfoRight">
        <i class="fas fa-pencil"></i>
        <p style="float:right">Edit</p>
        <div class="profileElement">
            <h3>Question1</h3>
            <textarea></textarea>
        </div>
        <div class="profileElement">
            <h3>Question2</h3>
            <textarea></textarea>
        </div>
        <div class="profileElement">
            <h3>Question3</h3>
            <textarea></textarea>
        </div>
            <div class="profileElement">
            <h3>Submit Your question</h3>
            <textarea></textarea>
            <button class="btn btn-warning submitButton" style="margin-top:10px;float:right">Submit</button>
        </div>
    </div>
</div>
<div class="reviews">
        <div class="reviewElement"><h3>Review1</h3></div>
        <div class="reviewElement"><h3>Review2</h3></div>
        <div class="reviewElement"><h3>Review3</h3></div>
</div>
